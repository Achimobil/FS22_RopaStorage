<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="ropaStorageType" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_ropaStorage</name>
        <functions>
            <function>$l10n_function_ropaStorage</function>
        </functions>
        <image>store/RopaStorage.dds</image>
        <price>5000</price>
        <lifetime>1000</lifetime>
        <dailyUpkeep>5</dailyUpkeep>
        <rotation>0</rotation>
        <brand>FARMERTOOLS</brand>
        <species>placeable</species>
        <category>misc</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>tools</tab>
        </brush>
    </storeData>
    
    <base>
        <filename>placeable/RopaStorage.i3d</filename>
        <canBeRenamed>true</canBeRenamed>
    </base>
    
    <!-- <bigDisplays> -->
        <!-- <bigDisplay upperLeftNode="0>1|0" height="2.1" width="1.85" size="0.11" color="0 0.9 0 1"></bigDisplay> -->
    <!-- </bigDisplays> -->
    
    <clearAreas />
    
    <leveling requireLeveling="false" />
	
    <indoorAreas />
	
    <ai>
        <updateAreas />
    </ai>
  
    <animatedObjects>		
        <animatedObject saveId="Connector1SaveId" >
            <dependency animatedObjectIndex="2" minTime="0" maxTime="0" />
            <dependency animatedObjectIndex="3" minTime="0" maxTime="0" />
            <animation duration="2">
                <part node="Connector1"> 
                    <Keyframe time="0.0" translation="-1.3 1 0" rotation="0 0 0"/>
                    <Keyframe time="0.5" translation="2.5 1 0" rotation="0 0 0"/>
                    <Keyframe time="1.0" translation="2.5 0.2 0" rotation="0 0 0"/>
                </part>
            </animation>
            <controls triggerNode="moveTrigger1" posAction="ACTIVATE_HANDTOOL" posText="rs_Connector1_open" negText="rs_Connector1_close" />
            <sounds>
                <moving file="$data/sounds/prefab/gate/lelyVectorLoop.ogg" loops="0" volume="110" radius="20" innerRadius="6" fadeOut="0.25"/>
            </sounds>
        </animatedObject>
        <animatedObject saveId="Connector2SaveId" >
            <dependency animatedObjectIndex="1" minTime="0" maxTime="0" />
            <dependency animatedObjectIndex="3" minTime="0" maxTime="0" />
            <animation duration="3">
                <part node="Connector2"> 
                    <Keyframe time="0.0" translation="-1.3 4.5 0" rotation="0 0 0"/>
                    <Keyframe time="0.5" translation="2.5 4.5 0" rotation="0 0 0"/>
                    <Keyframe time="1.0" translation="2.5 0.2 0" rotation="0 0 0"/>
                </part>
            </animation>
            <controls triggerNode="moveTrigger2" posAction="ACTIVATE_HANDTOOL" posText="rs_Connector2_open" negText="rs_Connector2_close" />
            <sounds>
                <moving file="$data/sounds/prefab/gate/lelyVectorLoop.ogg" loops="0" volume="110" radius="20" innerRadius="6" fadeOut="0.25"/>
            </sounds>
        </animatedObject>
        <animatedObject saveId="Connector3SaveId" >
            <dependency animatedObjectIndex="1" minTime="0" maxTime="0" />
            <dependency animatedObjectIndex="2" minTime="0" maxTime="0" />
            <animation duration="4">
                <part node="Connector3"> 
                    <Keyframe time="0.0" translation="-1.3 8 0" rotation="0 0 0"/>
                    <Keyframe time="0.5" translation="2.5 8 0" rotation="0 0 0"/>
                    <Keyframe time="1.0" translation="2.5 0.2 0" rotation="0 0 0"/>
                </part>
            </animation>
            <controls triggerNode="moveTrigger3" posAction="ACTIVATE_HANDTOOL" posText="rs_Connector3_open" negText="rs_Connector3_close" />
            <sounds>
                <moving file="$data/sounds/prefab/gate/lelyVectorLoop.ogg" loops="0" volume="110" radius="20" innerRadius="6" fadeOut="0.25"/>
            </sounds>
        </animatedObject>
    </animatedObjects>

    <dynamicMountAttacherPlacable triggerNode="dynamicMountAttacher" rootNode="Connector1" jointNode="Connector1" forceAcceleration="5000" mountType="TYPE_FIX_ATTACH" transferMass="true">
        <animation name="attachCutter" speed="1"/>
        <lockPosition xmlFilename="$data/vehicles/ropa/rrXL9/rrXL9.xml" jointNode="cutterLockNode"/>
    </dynamicMountAttacherPlacable>
    
    <!-- <infoTrigger triggerNode="1>0" /> -->
    <i3dMappings>
        <i3dMapping id="dynamicMountAttacher" node="0>0|1|0|3" />
        <i3dMapping id="Connector1" node="0>0|1|0" />
        <i3dMapping id="Connector2" node="0>0|1|1" />
        <i3dMapping id="Connector3" node="0>0|1|2" />
        <i3dMapping id="cutterLockNode" node="0>0|1|0|2" />
        <i3dMapping id="moveTrigger1" node="1>0" />
        <i3dMapping id="moveTrigger2" node="1>1" />
        <i3dMapping id="moveTrigger3" node="1>2" />
    </i3dMappings>
</placeable>
